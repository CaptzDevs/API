<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Course</title>
</head>
<style>
      *{
        padding: 0;
        margin: 0;
        box-sizing: border-box;
        transition: 0.5s;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    }
    ::-webkit-scrollbar {
        width: 10px;
        height: 10px;
        border-radius: 50px;
    }
    
    ::-webkit-scrollbar-track {
        background: #505050;
    }
    
    ::-webkit-scrollbar-thumb {
        background: #888;
    }
    
    ::-webkit-scrollbar-thumb:hover {
        background: #555;
    }
    
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }
    
    html {
        scroll-behavior: smooth;
    }
    body{
        min-height: 100vh;
    }
    main{
        min-height: 100vh;
        background: #323232;
        color: white;
        display: flex;
        align-items: flex-start;
        justify-content: flex-start;
        flex-direction: column;
        padding-bottom: 50px;
        gap: 10px;
        padding: 10px;
    }
    
    .section-course{
        width: 100%;
        border: 1px solid white;
        padding: 20px;
        border-radius: 10px;
        cursor: pointer;
        font-size: 1.5rem;
        display: flex;
        align-items: flex-start;
        justify-content: flex-start;
        flex-direction: column;

    }
    .section-course:hover{
        background: #2c2c2c;
    }

    a {
        width: 100%;
        color: white;
        text-decoration: none;
    }
    .course-id{
        font-size: .8rem;
    }
</style>
<body>
    <main>

        <h1>Courses</h1>
        <% data.courseList.forEach((item)=>{ %>
            <a target="" href="<%= `${process.env.base_url}/Course/detail/${item.id}` %> ">
                <section class="section-course">
                    <div class="course-naem">
                        <%= item.courseName.substring( item.courseName.indexOf(" ") + 1) %>
                    </div>
                    <div class="course-id">
                       รหัสวิชา <%= item.id %>
                    </div>
                </section>
            </a>
        <%  }) %>

    </main>
    
</body>
<script>
    
</script>
</html>