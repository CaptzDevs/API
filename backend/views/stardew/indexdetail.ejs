<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Stardew</title>
    <link rel="stylesheet" href="/css/root.css" />
  </head>
  <style>
    ::-webkit-scrollbar {
      width: 0px;
    }

    ::-webkit-scrollbar-track {
      background: #f1f1f1;
    }

    ::-webkit-scrollbar-thumb {
      background: #888;
    }

    ::-webkit-scrollbar-thumb:hover {
      background: #555;
    }

    ::-webkit-datetime-edit-text {
      color: rgb(88, 88, 88);
      padding: 0 0.3em;
    }

    ::-webkit-calendar-picker-indicator {
      color: rgb(0, 195, 255);
      cursor: pointer;
      margin-top: 3px;
    }

    * {
      margin: 0;
      padding: 0;
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen,
        Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
      box-sizing: border-box;
    }
    html {
      scroll-behavior: smooth;
    }

    body {
      background-color: rgb(255, 255, 255);
      overflow-x: hidden;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
    }

    main {
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: flex-start;
      padding: 20px;
      flex-direction: column;
      gap: 10px;
    }

    section.banner {
      width: 100%;
      border-radius: 10px;
      padding: 20px;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      gap: 10px;
    }

    section.season {
      width: 70%;
      min-width: 300px;
      border-radius: 10px;
      padding: 20px;
      display: flex;
      align-items: flex-start;
      justify-content: center;
      flex-wrap: wrap;
      position: relative;
      padding-top: 60px;
    }

     .label {
      padding: 5px 10px;
      position: absolute;
      left: 10px;
      top: 10px;
      border-left: 3px solid rgb(255, 255, 255);
      letter-spacing: 2px;
      color: white;
      text-transform: capitalize;
    }

    .season .plant {
      width: 70%;
      height: 100%;
      display: flex;
      align-items: flex-start;
      justify-content: center;
      padding: 10px;
      gap: 10px;
      flex-wrap: wrap;
      padding-top: 0;
    }

    .season-all{
      width: 70%;
      border-radius: 10px;
      padding: 20px;
      display: flex;
      align-items: flex-start;
      justify-content: center;
      flex-wrap: wrap;
      position: relative;
      padding-top: 60px;
      border: 1px solid black;
      gap: 50px;
    }
    .season-all .plant{
      width: 80%;
      min-width: 200px;
      cursor: pointer;
      border-radius: 10px;
      background: #ffffff;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 20px;
      padding: 30px;
      border: 1px solid black;
    }

    .season-all .plant:hover{
      filter: drop-shadow(5px 5px rgb(73, 73, 73));
    }

    .season-all .plant-item{
      width: 100% !important;
    }
    
    .season-all .label{
      color: black;
      border-left: 3px solid black;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
    }

    .plant .plant-item {
      width: 40%;
      /*  max-width: 230px; */
      min-width: 230px;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: flex-start;
      flex-direction: column;
      gap: 5px;
      padding: 10px;
      padding-top: 20px;
      border-radius: 10px;
      background: #ffffff;
    }
    .plant-item img {
      max-width: 40px;
      min-width: 40px;
      object-fit: contain;
    }
    .plant-item .plant-detail {
      font-size: 0.7rem;
      text-align: center;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
    }
    .plant-detail h2 {
      padding: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .plant-detail span {
      font-size: 0.5rem;
    }

    .plant-sub {
      width: 30%;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      padding: 20px;
      gap: 10px;
      border-radius: 10px;
      background: #ffffff;
    }

    .plant-sub-item {
      width: 100%;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: flex-start;
      gap: 10px;
    }

    .plant-sub-item img {
      width: 10%;
    }

    .season-spring {
      background: var(--green3);
    }
    .season-summer {
      background: var(--yellow4);
    }
    .season-fall {
      background: var(--orange4);
    }
    .season-winter {
      background: var(--cyan4);
    }

    .image-set {
      display: flex;
      align-items: center;
      justify-content: center;
    }
  
  </style>
  <body>
    <main>
      <section class="banner">
        <div class="image-set">
          <img
            src="https://stardewvalleywiki.com/mediawiki/images/1/18/Banner_Left.png"
            alt=""
          />
          <img
            src="https://stardewvalleywiki.com/mediawiki/images/6/68/Main_Logo.png"
            alt=""
          />
          <img
            src="https://stardewvalleywiki.com/mediawiki/images/4/4a/Banner_Right.png"
            alt=""
          />
        </div>

      </section>

      <section class="season-all">
        <div class="label">
          <span>All Crop</span> <i class="fa-sharp fa-solid fa-seedling"></i>
        </div>

        <% crops.map((item , i)=>{ %>
        <div class="plant">
          <div class="plant-item">
            <img src="<%= item.image %>" alt="" />

            <div class="plant-detail">
              <h2><%= item.name %></h2>
              <span><%= item.detail %></span>
            </div>
          </div>
      
            <div class="plane-phase">
                <% item.data?.phase.map((stage,i) => { %>
                  <div class="plane-phase-item">
                    <img src="<%= stage.image %>" alt="">
                  </div>
              <% }) %>
            </div>
        </div>
    
     

        <% }) %>
      </section>





